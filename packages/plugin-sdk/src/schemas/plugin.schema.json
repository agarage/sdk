{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agarage.dev/schemas/plugin.schema.json",
  "title": "Plugin Manifest",
  "description": "Schema for plugin manifest files (plugin.json)",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Unique plugin name (namespace)."
    },
    "version": {
      "type": "string",
      "description": "Plugin version (semver).",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-([0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*))?(?:\\+([0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*))?$"
    },
    "description": {
      "type": "string",
      "description": "Short description of the plugin."
    },
    "author": {
      "type": "string",
      "description": "Author or organization name."
    },
    "license": {
      "type": "string",
      "description": "License identifier (e.g. MIT)."
    },
    "dependencies": {
      "type": "object",
      "description": "Map of plugin names to version ranges this plugin depends on.",
      "additionalProperties": {
        "type": "string",
        "description": "Semver range",
        "minLength": 1
      },
      "propertyNames": {
        "type": "string",
        "minLength": 1
      }
    }
  },
  "required": ["name"],
  "examples": [
    {
      "name": "themed-button",
      "version": "1.0.0",
      "description": "A simple themed button plugin",
      "author": "John Doe",
      "license": "MIT",
      "dependencies": {
        "theme-toggle": "^1.0.0"
      }
    }
  ]
}


