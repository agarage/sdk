{
  "name": "sdk",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/plugins/*",
    "examples/apps/*"
  ],
  "scripts": {
    "install": "bun install --filter='./packages/*' --filter='./examples/plugins/*' --filter='./examples/apps/*'",
    "dev": "bun run --filter='./examples/apps/*' --filter='./examples/plugins/*' dev",
    "build": "bun run --filter='./examples/apps/*' build",
    "preview": "bun run --filter='./examples/apps/*' preview"
  }
}
